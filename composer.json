{
  "name": "itspire/monolog-loki",
  "type": "library",
  "description": "Monolog handler for Grafana Loki",
  "license": "BSD-3-Clause",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Ryan RAJKOMAR",
      "email": "ryan.rajkomar@itspire.fr"
    }
  ],
  "support": {
    "issues": "https://github.com/itspire/monolog-loki/issues"
  },
  "require": {
    "php": ">=7.4",
    "monolog/monolog": "^2.0"
  },
  "require-dev": {
    "ext-json": "*",
    "ext-curl": "*",
    "pdepend/pdepend": "~2.7",
    "phploc/phploc": "~6.0",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "~5.0",
    "squizlabs/php_codesniffer": "~3.5",
    "symfony/phpunit-bridge": "~5.1"
  },
  "autoload": {
    "psr-4": {
      "Itspire\\MonologLoki\\": "src/main/php"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Itspire\\MonologLoki\\Test\\": "src/test/php"
    }
  }
}
