{
  "name": "itspire/monolog-loki",
  "type": "library",
  "description": "Monolog handler for Grafana Loki",
  "license": "BSD-3-Clause",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Ryan RAJKOMAR",
      "email": "ryan.rajkomar@itspire.fr"
    }
  ],
  "support": {
    "issues": "https://github.com/itspire/monolog-loki/issues"
  },
  "require": {
    "php": "~8.1",
    "monolog/monolog": "~3.0"
  },
  "require-dev": {
    "ext-json": "*",
    "ext-curl": "*",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "~3.x-dev",
    "symfony/phpunit-bridge": "~6.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Itspire\\MonologLoki\\": "src/main/php"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Itspire\\MonologLoki\\Test\\": "src/test/php"
    }
  }
}
